<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#2C2F33">

    <!-- Título de la Universidad -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Universidad Técnica del Norte"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="8dp"/>

    <!-- Autor -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Realizado por Anderson Lechón"
        android:textSize="18sp"
        android:textColor="#B0B0B0"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Título de la Calculadora -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculadora Binaria"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="32dp"/>

    <!-- Pantalla de Visualización -->
    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#23272A"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:elevation="4dp"/>

    <!-- Layout de botones -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:columnCount="4"
        android:rowCount="5"
        android:layout_gravity="center">

        <!-- Botón C (Clear) -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#E74C3C"
            android:text="C"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- Botones Operadores -->
        <Button
            android:id="@+id/btnDivide"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#3498DB"
            android:text="÷"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btnMultiply"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#3498DB"
            android:text="×"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Botones Numéricos -->
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#1ABC9C"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#1ABC9C"
            android:text="1"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Botón Resta -->
        <Button
            android:id="@+id/btnSubtract"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#3498DB"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Botón Suma -->
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#3498DB"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Botón Igual -->
        <Button
            android:id="@+id/btnEquals"
            android:layout_width="0dp"
            android:layout_height="69dp"
            android:layout_columnSpan="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="#E67E22"
            android:text="="
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </GridLayout>

</LinearLayout>
